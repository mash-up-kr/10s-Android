<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/friendImg"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/friendNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_b"
            android:text="Jasmin"
            android:textColor="#555555"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/content"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/content"
            android:layout_width="120dp"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:background="#e5f7f2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/friendImg"
            app:layout_constraintRight_toLeftOf="@id/timeTxt"
            app:layout_constraintTop_toBottomOf="@id/friendNameTxt" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/nanum_square_b"
            android:text="0:04"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/content"
            app:layout_constraintLeft_toLeftOf="@id/content"
            app:layout_constraintTop_toTopOf="@id/content" />

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="#90c0b7"
            android:src="@drawable/ic_voice_record_play"
            app:layout_constraintBottom_toBottomOf="@id/content"
            app:layout_constraintRight_toRightOf="@id/content"
            app:layout_constraintTop_toTopOf="@id/content" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_right_triangle"
            app:layout_constraintLeft_toLeftOf="@id/content"
            app:layout_constraintTop_toBottomOf="@id/content" />

        <TextView
            android:id="@+id/timeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_r"
            android:text="오후 9:12"
            android:textColor="#888888"
            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="@id/content"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>