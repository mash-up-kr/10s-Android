<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/timeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_r"
            android:text="오후 9:12"
            android:textColor="#888888"
            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <View
            android:id="@+id/content"
            android:layout_width="120dp"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:background="#0fe1a3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/timeTxt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/nanum_square_b"
            android:textColor="#ffffff"
            android:text="0:04"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/playBtn"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/playBtn"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="#40a390"
            android:src="@drawable/ic_voice_record_play"
            app:layout_constraintBottom_toBottomOf="@id/content"
            app:layout_constraintLeft_toLeftOf="@id/content"
            app:layout_constraintTop_toTopOf="@id/content" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>